<html lang='en'>
	<head>
		<% include ../partials/head %>
	</head>
	<body>
		<h1>Login</h1>

		<a href="/signup">Click here to Sign Up</a>

		<form action="/api/verifyPassword" method="post">
			<label>name</label><input type="string" name="name">
			<label>paassword</label><input type="string" name="password">

			<button type="submit">Submit</button>
		</form>

		<br>
		<%= greeting %>

		<% for(var key in users) { %>
			<li><a href="/profile?name=<%= key %>"><%= key %></a> - <%= users[key].about %></li>
		<% }; %>

	</body>
</html>